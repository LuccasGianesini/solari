{
  "Application": {
    "ApplicationName": "solari-samples-webapi",
    "Project": "solari"
  },
  "Vanth": {
    "UseFluentValidation": true,
    "UseExceptionHandlingMiddleware": true
  },
  "Callisto":  [
  {
    "Name": "localhost",
    "ConnectionString": "mongodb://localhost:27017",
    "Trace": true,
    "HeartbeatTimeout": "m1",
    "HeartbeatInterval": "s10",
    "ConnectTimeout": "s60",
    "Ipv6": false,
    "LocalThreshold": "s10",
    "MaxConnectionIdleTime": "h1",
    "MaxConnectionLifeTime": "h2",
    "MaxConnectionPoolSize": 500,
    "MinConnectionPoolSize": 50,
    "RetryWrites": true,
    "WriteConcern": "acknowledged",
    "RetryReads": true,
    "ReadConcern": "available",
    "ReadPreference": "nearest",
    "ServerSelectionTimeout": "s10",
    "SocketTimeout": "h2",
    "WaitQueueTimeout": "s30",
    "ConnectionMode": "automatic",
    "GuidRepresentation": "standard",
    "ConnectionStringScheme": "mongodb"
  },
    {
      "Name": "localhost-identity",
      "ConnectionString": "mongodb://localhost:27017/users"
    }
]
}

