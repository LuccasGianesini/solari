<Project Sdk="Microsoft.NET.Sdk">
     <PropertyGroup>
        <AssemblyName>Solari.Sol</AssemblyName>
        <Authors>Lauth</Authors>
        <Title>Solari.Sol</Title>
        <PackageId>Solari.Sol</PackageId>
        <PackageDescription>Application bootstrapper</PackageDescription>
        <PackageTags>C#; DotnetCore; Bootstrapper</PackageTags>
        <LangVersion>8</LangVersion>
        <RootNamespace>Solari.Sol</RootNamespace>
         <repositoryUrl>https://github.com/LuccasGianesini/solari</repositoryUrl>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <TargetFrameworks>netcoreapp2.2;netcoreapp3.0;netcoreapp3.1</TargetFrameworks>
    </PropertyGroup>
    <ItemGroup>
        <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Hosting.Abstractions" Version="2.2.0" />
      <PackageReference Include="Microsoft.Extensions.Configuration" Version="3.1.2" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.2" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="3.1.2" />
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="3.1.2" />
      <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.2" />
      <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="3.1.2" />
      <PackageReference Include="Scrutor" Version="3.2.0" />
      <PackageReference Include="Serilog" Version="2.9.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Solari.Io\Solari.Io.csproj" />
      <ProjectReference Include="..\Solari.Rhea\Solari.Rhea.csproj" />
    </ItemGroup>


</Project>
