<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Solari.Sol</AssemblyName>
        <Authors>Lauth</Authors>
        <Title>Solari.Sol</Title>
        <PackageId>Solari.Sol</PackageId>
        <PackageDescription>Application bootstrapper</PackageDescription>
        <PackageTags>C#; DotnetCore; Bootstrapper; Solari; Sol</PackageTags>
        <RootNamespace>Solari.Sol</RootNamespace>
        <repositoryUrl>https://github.com/LuccasGianesini/solari</repositoryUrl>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <TargetFramework>net5.0</TargetFramework>
        <LangVersion>9</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>
    <ItemGroup>
        <None Include="..\..\LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
    </ItemGroup>

    <ItemGroup>

        <PackageReference Include="FluentValidation" Version="9.3.0" />
        <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.2.7" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
        <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="5.0.0" />
        <PackageReference Include="NewId" Version="3.0.2" />
        <PackageReference Include="Scrutor" Version="3.3.0" />
        <PackageReference Include="Serilog" Version="2.10.1-dev-01324" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Solari.Eris\Solari.Eris.csproj" />
      <ProjectReference Include="..\Solari.Sol.Abstractions\Solari.Sol.Abstractions.csproj" />
    </ItemGroup>

</Project>
